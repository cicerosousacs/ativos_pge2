<!DOCTYPE html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application'%>
    <%= stylesheet_link_tag    'admins_session'%>

  </head>
    <body class="bg-primary">
      <div id="layoutAuthentication">
          <div id="layoutAuthentication_content">
              <main>
                  <div class="container">
                      <div class="row justify-content-center">
                          <div class="col-lg-4">
                              <div class="card shadow-lg border-0 rounded-lg mt-5">
                                  <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4" ><i class=" fas fa-cubes"></i> Ativos PGE</h3></div>
                                  <div class="card-body">
                                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                      <div class="form-group">
                                        <%= f.label :email,style:"font-family:Verdana;" %><br/>
                                        <%= f.email_field :email, autofocus: true, placeholder:"name@example.com", class:"form-control" %>
                                      </div>

                                      <div class="form-group">
                                      <%= f.label :password, style:"font-family:Verdana;" %><br/>
                                        <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
                                      </div>

                                      <div class="actions d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <%= f.submit "Entrar", class:"btn btn-primary", style:"font-family:Verdana;" %>
                                      </div>
                                    <% end %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </main>
          </div>
      </div>

      <%= javascript_include_tag 'application'%>
      <%= javascript_include_tag 'admins_session'%>

      <% if notice %>
        <% notice.each do |key, value| %>
          <%= javascript_tag do %>
              $.bootstrapGrowl('<%= value %>', {
              type: 'success', 
              align: 'center',
              width: 350,
              delay: 3000, 
              allow_dismiss: true, 
              stackup_spacing: 10 
              });
          <% end %>
        <% end %>
      <% end %>
    </body>
  </html>