<div class="row ">
  <div class="col-lg-12">
    <h1>Ativos</h1>    
  </div>
</div>
<!-- Topbar Search -->
<form class="d-none d-sm-inline-block form-inline mr-auto my-md-4">
  <div class="input-group">
      <%= form_tag(admins_ativo_users_path, :method => :get) do %>
        <%= text_field_tag 'search', nil, class: "form-control bg-light border-8 small", placeholder: 'Tombo, Serial ou Nome' %>
        <%= submit_tag "Pesquisar", class: "btn btn-primary"%>
      <% end %>
  </div>
</form>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>type</th>
      <th>description</th>
      <th>serial</th>
      <th>tombo</th>
      <th>
      <th>
      <th>
        <%= link_to new_admins_ativo_ativo_path do %>
          <i class="fa fa-plus" style="color:green"></i>
        <% end %> 
      </th>
    </tr>
  </thead>
  <tbody>
    <% @ativos.each do |ativo| %>
      <tr>
        <td><%= ativo.type.description %></td>
        <td><%= ativo.description %></td>
        <td><%= ativo.serial %></td>
        <td><%= ativo.tombo %></td>
        <td style="width: 10px">
          <%= link_to admins_ativo_ativo_path(ativo) do %>
            <i class="fa fa-eye"></i>
          <% end %>
        <td style="width: 10px">
          <%= link_to edit_admins_ativo_ativo_path(ativo) do %>
            <i class="fa fa-edit"></i>
          <% end %>
        <td style="width: 10px">
          <%= link_to admins_ativo_ativo_path(ativo), method: :delete, data: {confirm: "Certeza?"} do %>
            <i class="fa fa-trash" style="color:red"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @ativos %>