
<% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @admin.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @admin ], local: true ) do |form| %>

  <div class="form-group">
    <%= form.label :email %> <br>
    <%= form.text_field :email, class:"form-control-label" %>
  </div>

  <div class="form-group">
    <%= form.label :password %> <br>
    <%= form.password_field :password, class:"form-control-label" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %> <br>
    <%= form.password_field :password_confirmation, class:"form-control-label" %>
  </div>

<div class="text-right">
  <%= form.submit "Salvar", class:"btn btn-sm btn-primary" %>
</div>
<% end %>