<div class="row ">
  <div class="col-lg-12">
    <h1>Condição do Ativo</h1>    
  </div>
</div>

<br>

<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= link_to new_admins_ativo_condition_path do %>
          <i class="fa fa-plus btn-sm btn-success" style="color:write"></i>
        <% end %> 
      </th>
    </tr>
  </thead>
  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.description %></td>
        <td style="width: 10px">
          <%= link_to edit_admins_ativo_condition_path(condition) do %>
            <i class="fa fa-edit"></i>
          <% end %>
        <td style="width: 10px">
          <%= link_to admins_ativo_condition_path(condition), method: :delete, data: {confirm: "Certeza?"} do %>
            <i class="fa fa-trash" style="color:red"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>