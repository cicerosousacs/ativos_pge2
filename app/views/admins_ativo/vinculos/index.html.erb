<div class="row ">
  <div class="col-lg-12">
    <h1>Vinculos</h1>    
  </div>
</div>

<!-- Topbar Search -->
<form class="d-none d-sm-inline-block form-inline mr-auto my-md-4">
  <div class="input-group">
      <%= form_tag(admins_ativo_vinculos_path, :method => :get) do %>
        <%= text_field_tag 'search', nil, class: "form-control bg-light border-8 small", placeholder: 'Tombo, Serial ou Nome' %>
        <%= submit_tag "Pesquisar", class: "btn btn-primary"%>
      <% end %>
  </div>
</form>


<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>user</th>
      <th>area</th>
      <th>subarea</th>
      <th>
        <%= link_to new_admins_ativo_vinculo_path do %>
          <i class="fa fa-plus" style="color:green"></i>
        <% end %> 
      </th>
    </tr>
  </thead>
  <tbody>
    <% @vinculos.each do |vinculo| %>
      <tr>
        <td><%= vinculo.user.name %></td>
        <td><%= vinculo.area.description %></td>
        <td><%= vinculo.subarea.description %></td>>
        <td style="width: 10px">
          <%= link_to edit_admins_ativo_vinculo_path(vinculo) do %>
            <i class="fa fa-edit"></i>
          <% end %>
        <td style="width: 10px">
          <%= link_to admins_ativo_vinculo_path(vinculo), method: :delete, data: {confirm: "Certeza?"} do %>
            <i class="fa fa-trash" style="color:red"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
