      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td style="width: 10px">
          <%= link_to edit_admins_ativo_user_path(user) do %>
            <i class="fa fa-edit"></i>
          <% end %>
